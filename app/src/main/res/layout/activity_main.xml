<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:text="Log In"
        android:textColor="@color/black"
        android:textSize="35dp"
        android:textStyle="bold" />
    <TextView

        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="140dp"
        android:text="Hey there! Welcome back." />

    <Spinner
        android:id="@+id/spinnerlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="150dp"
        android:padding="25dp" />

    <EditText
        android:id="@+id/parentusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerlogin"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:shadowColor="@color/black"
        android:background="#BEFFFFFF"
        android:hint="Enter your email"
        android:padding="10dp"/>


    <EditText
        android:id="@+id/parentregno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parentusername"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:shadowColor="@color/black"
        android:background="#D1D1D1"
        android:hint="Enter student's registration number"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/parentpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parentregno"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:background="@color/#BEFFFFFF"
        android:hint="Enter password"
        android:padding="10dp"
        android:shadowColor="@color/black" />

    <EditText
        android:id="@+id/parentforgetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parentpassword"
        android:layout_alignRight="@id/parentpassword"
        android:hint="forget password?"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"/>

        <android.support.design.button.MaterialButton
        android:id="@+id/parentloginbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/parentpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="105dp"
        android:background="@drawable/button_ng"
        android:text="Sign In"
        app:cornerRadius="20dp" />



</RelativeLayout>